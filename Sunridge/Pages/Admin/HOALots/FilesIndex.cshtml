@page
@model Sunridge.Pages.Admin.HOALots.FilesIndexModel
@using Sunridge.Utility;

@{
    ViewData["Title"] = "FilesIndex";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.OwnerRole))
{
    @if (Request.Query["id"].Count > 0)
    {
        TempData["lotId"] = Request.Query["id"];
    }
    <div class="border backgroundWhite container mt-5 pt-3 pb-3">
        <div class="row">
            <div calss="col-md-6 mr-5 pr-5">
                <h2 class="pl-2 pt-2 text-primary">Files for Lot @Model.LotObj.LotNumber</h2>
            </div>
            <div class="col-md-6 ml-5 pl-5">
                <a href="/Admin/HOALots/FilesUpsert?lotId=@(Model.LotObj.LotId)" class="btn btn-primary ml-5">Upload Document</a>
                <a href="/Admin/HOALots/Index" class="btn btn-success float-md-right">Back to Lots</a>
            </div>
        </div>

        <div class="pl-2">
            <table id="DT_Load" class="table pb-3 table-striped table-bordered" style="width:100%; text-align:center;">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>File</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
@section Scripts {
    <script src="~/js/LotFile.js"></script>
}
}
else
{
    <h1 class="m-3">You must be logged in to view this page.</h1>
}

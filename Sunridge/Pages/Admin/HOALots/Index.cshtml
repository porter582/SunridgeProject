@page
@model Sunridge.Pages.Admin.HOALots.IndexModel
@using Sunridge.Utility;

@{
    ViewData["Title"] = "Index";
}

@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.OwnerRole))
{
    <div class="border backgroundWhite container mt-5 pt-3 pb-3">
        <div class="row pl-2">
            <div class="col-md-6">
                <h2 class="pl-2 pt-2 text-primary">HOA Lots</h2>
            </div>
            <div class="col-md-6">
                @if (User.IsInRole(SD.AdminRole))
                {
                    <a asp-page="/Admin/Dashboard" class="btn btn-success text-center float-right">Back to Admin Portal</a>
                }
                else
                {
                    <a asp-page="/Admin/Dashboard" class="btn btn-success text-center float-right">Back to Owner Portal</a>
                }
            </div>
        </div>

        <div class="pl-2">
            <table id="DT_Load" class="table pb-3 table-striped table-bordered" style="width:100%; text-align:center;">
                <thead>
                    <tr>
                        <th>Lot Number</th>
                        <th>Street Address</th>
                        <th>Owner(s)</th>
                        <th>Tax ID</th>
                        <th>Lot Inventory</th>
                        <th>Manage Lot</th>
                        <th>Rem/Arch Owner</th>
                        <th>Rem/Arch Owner</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
@section Scripts {
    <script src="~/js/HoaLots.js"></script>
}
}
else
{
<h1 class="m-3">You must be logged in as an admin to view this page.</h1>
}
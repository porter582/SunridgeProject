@page
@model Sunridge.Pages.Admin.DashboardModel
@using Sunridge.Utility;

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@if (User.IsInRole(SD.AdminRole))
{
    <div class="border backgroundWhite container mt-5 pt-3 pb-3 pb-2">

        <h1 class="p-3 text-primary">Administrator Portal</h1>
        <hr />
        @if (Model.ReportsList.Count() > 0 || Model.ClaimReportList.Count() > 0)
        {
            <h4 style="color:red" class="p-3">You have @Model.ReportsList.Count().ToString() unresolved form(s) and @Model.ClaimReportList.Count().ToString() unresolved claim form(s)</h4>
        }

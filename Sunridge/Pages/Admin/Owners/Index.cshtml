@page
@model Sunridge.Pages.Admin.Owners.IndexModel
@using Sunridge.Utility;

@{
    ViewData["Title"] = "Index";
}

@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.OwnerRole))
{
    <div class="border backgroundWhite container mt-5 pt-3 pb-3">
        <div class="row pl-2">
            <div calss="col-md-6">
                <h2 class="pl-2 pt-2 text-primary">Owners</h2>
            </div>
            <div class="col-md-6"></div>
            @if (User.IsInRole(SD.AdminRole))
            {
                <a asp-page="/Admin/Owners/Upsert" class="btn btn-primary m-2 ml-5">Create New Owner</a>
                <a asp-page="/Admin/Dashboard" class="btn btn-success text-center float-right m-2">Back to Admin Portal</a>
            }
            else
            {
                <a asp-page="/Admin/Dashboard" class="btn btn-success text-center float-right m-2">Back to Owner Portal</a>
            }
        </div>

        <div class="pl-2">
            <table id="DT_Load" class="table pb-3 table-striped table-bordered" style="width:100%; text-align:center;">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Emergency Contact</th>
                        <th>Emergency Contact #</th>
                        <th>Lot(s)</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

@section Scripts {
    <script src="~/js/OwnerIndex.js"></script>
}
}
else
{
    <h1 class="m-3">You must be logged in as an admin to view this page.</h1>
}

@page
@model Sunridge.Pages.Admin.CommonAreaAssets.IndexModel
@using Sunridge.Utility
@{
    ViewData["Title"] = "Index";
}
@if (User.IsInRole(SD.AdminRole))
{
    <div class="border backgroundWhite container mt-5 pt-3 pb-3">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-primary">Admin Common Area List</h2>
            </div>
            <div class="col-md-5 offset-1">
                <a asp-page="/Admin/CommonAreaAssets/Upsert" class="btn btn-primary ml-5">Add New Common Area</a>
                <a asp-page="/Admin/Dashboard" class="btn btn-success text-center float-right">Back to Admin Portal</a>
            </div>
        </div>

        <div class="table-responsive-sm">
            <table id="DT_Load" class="table pb-3 table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Asset Name</th>
                        <th>Purchase Price</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
}
else
{
    <div>
        <h1 class="m-3">You must be logged in as an admin to view this page.</h1>
    </div>
}
@section Scripts {
    <script src="~/js/adminCommonArea.js"></script>
}


@page
@model Sunridge.Pages.Admin.InventoryItems.IndexModel
@using Sunridge.Utility;

@{
    ViewData["Title"] = "Index";
}

@if (User.IsInRole(SD.AdminRole))
{
    <div class="border backgroundWhite container mt-5 pt-3 pb-3">
        <div class="row pl-2">
            <div calss="col-md-6">
                <h2 class="pl-2 pt-2 text-primary">Inventory Items</h2>
            </div>
            <div class="col-md-5 offset-1 pb-3 pt-2">
                <a asp-page="/Admin/InventoryItems/Upsert" class="btn btn-primary ml-5">Create New Inventory Item</a>
                <a asp-page="/Admin/Dashboard" class="btn btn-success text-center float-right">Back to Admin Portal</a>
            </div>
        </div>

        <div class="pl-2">
            <table id="DT_Load" class="table pb-3 table-striped table-bordered display" style="width:100%; text-align:center;">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
@section Scripts {
    <script src="~/js/InventoryItems.js"></script>
}
}
else
{
<h1>You must be logged in as an Admin to view this page.</h1>
}

@page
@model Sunridge.Pages.Admin.Classifieds.IndexModel
@using Sunridge.Utility
@{
    ViewData["Title"] = "Classifieds Index";
}
@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.OwnerRole))
{
    <div class="border backgroundWhite container mt-5 pt-3 pb-3">

        <div class="row">
            <div class="col-md-6">        
                <h2 class="text-primary">Admin Classified Services</h2>
            </div>
            <div class="col-md-6">
                <a asp-page="/Admin/Classifieds/Services/Upsert" class="btn btn-primary btn-sm ml-5">Add New Classified Service</a>
                <a asp-page="/Admin/Classifieds/Index" class="btn btn-success btn-sm">Back to Classified Listings</a>
            </div>
        </div><div class="row">
            <div class="col-lg-3 col-md-6">
            </div>
        </div>
        <div class="table-responsive-sm">

            <table id="DT_Load" class="table pb-3 table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
}
else
{
    <div>
        <h1 class="m-3">You must be logged in as an Admin to view this page.</h1>
    </div>
}
@section Scripts {
    <script src="~/js/classifiedService.js"></script>
}

@page
@model Sunridge.Pages.Admin.Keys.UpsertModel
@using Sunridge.Utility
@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.OwnerRole))
{
    <form method="post" asp-action="Upsert" enctype="multipart/form-data">
        <div class="container mt-5">
            <div class="row px-2 mx-2 backgroundWhite border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (Model.KeyObj.KeyId != 0)
                {
                    <input type="hidden" asp-for="KeyObj.KeyId" />
                }
                <div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
                    <h2 class="text-primary">@(Model.KeyObj.KeyId != 0 ? "Update" : "Add") Keys</h2>
                </div>
                <div class="col-8 pt-3">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="KeyObj.Year">Year</label>
                        </div>
                        <div class="col-9">
                            <input class="form-control" asp-for="KeyObj.Year" />
                            <span class="text-danger" asp-validation-for="KeyObj.Year"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="KeyObj.SerialNumber">Serial Number</label>
                        </div>
                        <div class="col-9">
                            <input class="form-control" asp-for="KeyObj.SerialNumber" />
                            <span class="text-danger" asp-validation-for="KeyObj.SerialNumber"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-9 offset-3">
                            <div class="row">
                                <div class="col-6">
                                    @if (Model.KeyObj.KeyId != 0)
                                    {
                                        <button type="submit" class="btn btn-primary form-control">Update</button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-primary form-control" onclick="return ValidateInput()">Add</button>
                                    }
                                </div>
                                <div class="col-6">
                                    <a asp-page="/Admin/Keys/Index" class="btn btn-success form-control">Back to Keys</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
}
else
{
    <div>
        <h1 class="m-3">You must be logged in to view this page.</h1>
    </div>
}
@page
@model Sunridge.Pages.Admin.Photos.IndexModel
@using Sunridge.Utility;

@{
    ViewData["Title"] = "Photos Index";
}

@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.OwnerRole))
{
    <div class="border backgroundWhite container mt-5 pt-3 pb-3">
        <div class="row pl-2">
            <div calss="col-md-6">
                <h2 class="pl-2 pt-2 text-primary">Photo Gallery List</h2>
            </div>
            <div class="col-md-6 pb-3 pt-2 text-right">
                <a asp-page="/Admin/Photos/Upsert" class="btn btn-primary ml-5">Add New Photo</a>
                @if (User.IsInRole(SD.AdminRole))
                {
                    <a asp-page="/Admin/Dashboard" class="btn btn-success text-center float-right ml-2">Back to Admin Portal</a>
                }
                else
                {
                    <a asp-page="/Admin/Dashboard" class="btn btn-success text-center float-right ml-2">Back to Owner Portal</a>
                }
            </div>
        </div>

        <div class="pl-2">
            <table id="DT_Load" class="table pb-3 table-striped table-bordered" style="width:100%; text-align:center;">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Title</th>
                        <th>Name</th>
                        <th>Year</th>
                        <th>Image</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
        @section Scripts {
            <script src="~/js/adminPhotoIndex.js"></script>
        }
        }
        else
        {
        <h1>You must be logged in to view this page.</h1>
        }
